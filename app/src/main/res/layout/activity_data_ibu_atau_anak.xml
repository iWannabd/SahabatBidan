<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DataIbuatauAnak">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnDataIbu"
        android:background="@drawable/button_ibu"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data Ibu"
        android:textColor="@android:color/secondary_text_dark"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/btnDataIbu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnDataIbu"
        android:layout_toEndOf="@+id/btnDataIbu" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:id="@+id/btnAnak"
        android:background="@drawable/button_ibu_dan_anak"
        android:layout_below="@+id/btnDataIbu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/secondary_text_dark"
        android:text="Data Anak"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/btnAnak"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnAnak"
        android:layout_toEndOf="@+id/btnAnak" />

</RelativeLayout>
