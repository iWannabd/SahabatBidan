<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Halo"
            android:id="@+id/sambut"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:background="@drawable/nurse"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnprofil"
            android:layout_gravity="bottom"
            android:textColor="#7f8c8d"
            android:background="@android:color/transparent"
            android:text="Profil"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnlogout"
            android:layout_gravity="bottom"
            android:textColor="#7f8c8d"
            android:layout_marginLeft="90dp"
            android:background="@android:color/transparent"
            android:text="Logout"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_reminder"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#bdc3c7"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:background="@drawable/clock"
            android:id="@+id/imageButton3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right" />
        <TextView
            android:text="Reminder"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:background="@drawable/button_bidan"
            android:id="@+id/imageButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right" />
        <TextView
            android:text="Lihat Data"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/button_bidan"
            android:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chatting"
            android:id="@+id/textView2"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view4"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="16dp"
            android:id="@+id/button_edukasi"
            android:background="@drawable/button_edukasi"
            android:layout_gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edukasi Bidan"
            android:id="@+id/textView3"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>
