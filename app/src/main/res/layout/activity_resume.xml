<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context=".ActDataPasien.ActDataPasienIbu.Hamil.Periksa.ResumeActivity">

        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/about_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="0dp"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/nurse"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Diperiksa oleh"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/pemeriksa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-"
                android:id="@+id/keseluruhan"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            card_view:cardBackgroundColor="#4CAF50"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/ibu"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Keadaan Ibu"
                android:textColor="#FFF"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Resiko kehamilan: "
                android:id="@+id/ibu"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Analisa hemoglobin: "
                android:id="@+id/hemo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="55dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Analisa gizi: "
                android:id="@+id/gizi"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="75dp"
                android:textColor="#FFF"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            card_view:cardBackgroundColor="#009688"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/fetus"
                android:layout_gravity="right"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Keadaan Janin"
                android:textColor="#FFF"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-"
                android:id="@+id/gerak"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-"
                android:id="@+id/beratjanin"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="55dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-"
                android:id="@+id/posisijanin"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="75dp"
                android:textColor="#FFF"/>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view5"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            card_view:cardBackgroundColor="#00BCD4"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/chat"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Saran"
                android:textColor="#FFF"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="-"
                android:id="@+id/sarann"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:textColor="#FFF"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>